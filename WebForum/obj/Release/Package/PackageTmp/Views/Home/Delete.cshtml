@model WebForum.Models.Thread

@{
    ViewBag.Title = "Delete Thread";
}

<h2>Delete Thread</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Thread:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.thread_title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.thread_title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.thread_date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.thread_date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.thread_text)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.thread_text)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.thread_views)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.thread_views)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.thread_upvotes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.thread_upvotes)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <div class="btn btn-primary btn-md">
            @Html.ActionLink("Back to Thread", "Details", new { id = Model.thread_id }) </div>
        </div>
    }
</div>
