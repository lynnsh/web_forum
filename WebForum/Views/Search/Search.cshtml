@model IEnumerable<WebForum.Models.Thread>

@{
    ViewBag.Title = "Search Results";
}
<h2>Search Results</h2>

@if (Model.Count() == 0)
{
    <br /><h4>Sorry, no results were found!</h4><br />
}
else
{
    foreach (var item in Model)
    {
        <div class="well">
            <h4>@Html.DisplayFor(modelItem => item.thread_title) </h4>
            date: <span class="badge" id="index-date">
            @Html.DisplayFor(modelItem => item.thread_date) </span><br />
            user: <span id="user" class="badge">
            @Html.DisplayFor(modelItem => item.username)</span><br />
            @if (item.Tags.Count != 0)
            { 
                <div><span>tags: </span>
                @foreach (var t in item.Tags.Take(5))
                {
                    <span class="badge" id="green">@Html.DisplayFor(modelItem => t.tag_name)</span>
                }</div>
            }
            <p>
               @Html.ActionLink("Edit", "Edit", "Home", new { id = item.thread_id }, new { @class = "btn btn-warning btn-xs", @id = "black" })
               @Html.ActionLink("Details", "Details", "Home", new { id = item.thread_id }, new { @class = "btn btn-warning btn-xs", @id = "black" })
               @Html.ActionLink("Delete", "Delete", "Home", new { id = item.thread_id }, new { @class = "btn btn-warning btn-xs", @id = "black" })
            </p>
        </div>
    }
}

        <div class = "btn btn-primary btn-md">
            @Html.ActionLink("Back to Home", "Index", "Home")
        </div>


